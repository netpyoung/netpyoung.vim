(ns xxx.core)


(defmacro ->>
  ([x form] (if (seq? form)
    (with-meta `(~(first form) ~@(next form)  ~x) (meta form))
    (list form x)))
  ([x form & more]
   `(->> (->> ~x ~form) ~@more)))

(defn ls [& args]
  (execute (str "echo '"
  (->> args
       (concat ["ls" "-al"])
       (join " ")
       (#*system)
       ) "'")))
